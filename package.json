{
  "name": "vite-rts-template",
  "version": "0.0.1",
  "private": true,
  "description": "Template with Vite, React, Tailwind & Supabase",
  "scripts": {
    "tailwind:dev": "npx tailwindcss -i ./src/css/input.css -o ./src/css/styling.css --watch",
    "tailwind:build": "npx tailwindcss -i ./src/css/input.css -o ./src/css/styling.css --minify",
    "build": "npm run tailwind:build && vite build",
    "dev": "npm run tailwind:dev | vite --mode development",
    "test": "jest --config jest.config.js",
    "test-e2e": "npm run build && jest --config jest.e2e.config.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.4.1",
    "localforage": "^1.10.0",
    "puppeteer": "^19.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chrome": "^0.0.127",
    "@types/firefox-webext-browser": "^109.0.0",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webextension-polyfill": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "@vitejs/plugin-react": "^1.3.0",
    "babel-prettier-parser": "^0.10.8",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "prettier": "^3.0.3",
    "rollup": "^2.56.3",
    "rollup-plugin-empty-dir": "^1.0.5",
    "rollup-plugin-esnext": "^0.1.0",
    "rollup-plugin-polyfill-node": "^0.11.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-zip": "^1.0.3",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.1.1",
    "tslib": "^2.0.3",
    "typescript": "^4.2.3",
    "vite": "^2.9.0",
    "vite-plugin-replace": "^0.1.1"
  }
}
